    "narrative_techniques": {
      "primary_methods": [
        {
          "name": "second_person_immersion",
          "description": "Place reader directly into scene as protagonist",
          "example": "You line up a hundred horsemen in a straight line",
          "when_to_use": "action sequences, experience descriptions"
        },
        {
          "name": "compressed_biography",
          "description": "Entire life story in 3-5 sentences through milestone selection",
          "example": "At 16 he's flying a crop duster. At 23 he's an RCAF volunteer",
          "when_to_use": "creating product backstory, historical connections"
        },
        {
          "name": "sensory_cascade",
          "description": "Layer multiple sensory details in sequence for total immersion",
          "example": "Faint smell of honeysuckle, mixed with smell of horses and leather",
          "when_to_use": "scene-setting, atmospheric pieces"
        },
        {
          "name": "catalog_of_loss",
          "description": "List things from past we've lost to create nostalgia",
          "example": "Peaches worth eating. Real starch. Bakelite. Strike-anywhere matches",
          "when_to_use": "philosophy pieces, quality positioning"
        },
        {
          "name": "specificity_stacking",
          "description": "Pile precise concrete details to build authority",
          "example": "Pearl buttons 1/8 inch thick, leather seams with 14 stitches per inch",
          "when_to_use": "establishing craftsmanship, creating trust"
        },
        {
          "name": "historical_miniature",
          "description": "Recreate brief historical scene for context",
          "example": "Galileo dropped two weights off Leaning Tower of Pisa. Good-bye, Aristotle.",
          "when_to_use": "products with historical connection"
        }
      ],

      "storytelling_structure": {
        "preferred_arc": "scene_to_context_to_product_to_close",
        "product_introduction": "emerges_naturally_never_announced",
        "climax_placement": "typically_omitted_or_understated",
        "resolution": "simple_statement_or_elliptical_image"
      },

      "perspective_usage": {
        "first_person": "establishing_authority_and_confession",
        "second_person": "creating_immersion_and_engagement",
        "third_person": "historical_narratives_and_character_sketches",
        "dominant": "second_person_with_first_person_framing"
      }
